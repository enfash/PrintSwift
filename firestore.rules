
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAdmin() {
      // User must be authenticated and have an admin role document.
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Public Read Collections ---
    match /product_categories/{category} {
        allow read, write: if isAdmin();
    }
    
    match /products/{product} {
        // Admins can do anything
        allow write: if isAdmin();
        // Allow public reads only for Published products
        allow read: if resource.data.status == 'Published' || isAdmin();
    }

    match /testimonials/{testimonial} {
      allow read: if resource.data.visible == true || isAdmin();
      allow write: if isAdmin();
    }

    match /promos/{promo} {
        // Admins can do anything.
        allow read, write: if isAdmin();
        // Non-admins can ONLY list promos that are active.
        // Date checks must be performed client-side.
        allow list: if request.query.get('active') == true;
    }

    // --- Admin-only Write/Read Collections ---
    match /quote_requests/{request} {
        allow write: if true; // Allow public to submit quote requests
        allow read, delete: if isAdmin();
    }

    match /quotes/{quote} {
        allow read, write: if isAdmin();
    }

    match /roles_admin/{uid} {
        allow read, write: if isAdmin();
    }
  }
}
