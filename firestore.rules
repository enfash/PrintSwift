
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAdmin() {
      // User must be authenticated and have an admin role document.
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Public Read Collections ---
    match /product_categories/{category} {
        // Allow public read access to all categories.
        allow read: if true;
        // Only admins can write to categories.
        allow write: if isAdmin();
    }
    
    match /products/{product} {
        // Admins can do anything.
        allow write: if isAdmin();
        // Allow public read access (get or list) for Published products.
        allow read: if resource.data.status == 'Published' || isAdmin();
    }

    match /testimonials/{testimonial} {
      // Allow public read access (get or list) for visible testimonials.
      allow read: if resource.data.visible == true || isAdmin();
      // Only admins can write.
      allow write: if isAdmin();
    }

    match /promos/{promo} {
        // Admins can do anything.
        allow write: if isAdmin();
        // Allow public read access to active promos.
        allow read: if isAdmin() || (resource.data.active == true);
    }
    
    match /faqs/{faq} {
        // Allow public read for visible FAQs, and full admin access.
        allow read: if resource.data.visible == true || isAdmin();
        allow write: if isAdmin();
    }

    // --- Customer Management ---
    // Admins have full access to customer data.
    match /customers/{customerId} {
      allow read, write: if isAdmin(); 
    }

    // --- Admin-only Collections ---
    match /settings/{settingsId} {
        allow read, write: if isAdmin();
    }

    match /quote_requests/{request} {
        allow write: if true; // Allow public to submit quote requests
        allow read, delete: if isAdmin();
    }

    match /quotes/{quote} {
        allow read, write: if isAdmin();
    }

    match /roles_admin/{uid} {
        allow read, write: if isAdmin();
    }
  }
}

    